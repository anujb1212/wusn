datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Node {
  id           Int             @id @default(autoincrement())
  nodeId       Int             @unique
  location     String?
  burialDepth  Int?
  distanceToGW Float?
  installDate  DateTime        @default(now())
  lastSeen     DateTime        @default(now())
  isActive     Boolean         @default(true)
  readings     SensorReading[]

  @@index([nodeId])
}

// Sensor readings from gateway
// Gateway provides BOTH soil and air measurements in each payload:
// - nodeId, soilMoisture, soilTemperature (from buried sensor)
// - airTemperature, airHumidity, airPressure (from gateway BME280)
model SensorReading {
  id     Int @id @default(autoincrement())
  nodeId Int

  // Raw soil sensor values (from buried sensor node)
  moisture    Int // Raw SMU value (0-1023)
  temperature Int // Raw soil temperature value

  // Calibrated soil measurements
  soilMoistureVWC Float // Volumetric Water Content (%)
  soilTemperature Float // Soil temperature (°C)

  // Air measurements from gateway (BME280 or similar)
  airTemperature Float // Air temperature (°C) - CRITICAL for GDD and ET calculations
  airHumidity    Float // Relative humidity (%)
  airPressure    Float? // Barometric pressure (hPa) - optional

  // Metadata
  timestamp DateTime @default(now())

  // Relations
  node     Node      @relation(fields: [nodeId], references: [nodeId])
  analysis Analysis?

  @@index([nodeId, timestamp])
  @@index([timestamp])
}

// DEPRECATED: Use SensorReading.airTemperature instead
// Keeping for backward compatibility during migration
// Will be removed in future version after data migration
model WeatherReading {
  id        Int    @id @default(autoincrement())
  gatewayId String

  airTemperature Float
  humidity       Float
  pressure       Float?

  timestamp DateTime @default(now())

  @@index([gatewayId, timestamp])
  @@index([timestamp])
}

// Cached weather forecasts from external API (OpenWeatherMap)
model WeatherForecast {
  id        Int   @id @default(autoincrement())
  latitude  Float
  longitude Float

  forecastData Json // Array of daily forecasts: {date, tempMax, tempMin, precipitation, etc.}

  fetchedAt DateTime @default(now())
  expiresAt DateTime

  @@index([latitude, longitude, expiresAt])
}

model AggregatedReading {
  id              Int                 @id @default(autoincrement())
  timestamp       DateTime            @default(now())
  selectedNodeId  Int
  allNodesData    Json
  selectionScore  Float
  selectionReason String
  analysis        AggregatedAnalysis?

  @@index([timestamp])
  @@index([selectedNodeId])
}

model AggregatedAnalysis {
  id                  Int                  @id @default(autoincrement())
  aggregatedReadingId Int                  @unique
  timestamp           DateTime             @default(now())
  fuzzyDryScore       Int
  fuzzyOptimalScore   Int
  fuzzyWetScore       Int
  soilStatus          String
  confidence          Int
  irrigationAdvice    String
  urgency             String
  aggregatedReading   AggregatedReading    @relation(fields: [aggregatedReadingId], references: [id])
  cropRecommendations CropRecommendation[]

  @@index([aggregatedReadingId])
}

model Analysis {
  id                  Int                  @id @default(autoincrement())
  readingId           Int                  @unique
  timestamp           DateTime             @default(now())
  fuzzyDryScore       Int
  fuzzyOptimalScore   Int
  fuzzyWetScore       Int
  soilStatus          String
  confidence          Int
  irrigationAdvice    String
  urgency             String
  reading             SensorReading        @relation(fields: [readingId], references: [id])
  cropRecommendations CropRecommendation[]

  @@index([readingId])
  @@index([timestamp])
}

model CropRecommendation {
  id                   Int                 @id @default(autoincrement())
  analysisId           Int?
  aggregatedAnalysisId Int?
  cropName             String
  suitability          Int
  reason               String
  rank                 Int
  analysis             Analysis?           @relation(fields: [analysisId], references: [id])
  aggregatedAnalysis   AggregatedAnalysis? @relation(fields: [aggregatedAnalysisId], references: [id])

  @@index([analysisId])
  @@index([aggregatedAnalysisId])
  @@index([cropName])
}

// Field configuration
// Links sensor node to physical field, crop, and agronomic state
model Field {
  id        Int    @id @default(autoincrement())
  nodeId    Int    @unique // One field per sensor node
  gatewayId String // Gateway identifier for this field's sensor

  fieldName String
  location  String?
  latitude  Float
  longitude Float

  // Soil properties (default: SANDY_LOAM for Lucknow campus)
  soilTexture String @default("SANDY_LOAM") // SANDY | SANDY_LOAM | LOAM | CLAY_LOAM | CLAY

  // Crop information (null until crop confirmed by farmer)
  cropType            String? // Current crop from 20-crop universe
  sowingDate          DateTime? // Crop planting date
  expectedHarvestDate DateTime? // Estimated harvest date
  cropConfirmed       Boolean   @default(false)

  // GDD tracking (runtime state - updated by GDD service using AIR temperature)
  accumulatedGDD     Float     @default(0)
  lastGDDUpdate      DateTime?
  currentGrowthStage String? // INITIAL | DEVELOPMENT | MID_SEASON | LATE_SEASON | HARVEST_READY
  baseTemperature    Float? // Crop-specific Tbase for GDD calculation
  expectedGDDTotal   Float? // Total GDD required for crop maturity

  // Irrigation tracking
  lastIrrigationCheck  DateTime?
  lastIrrigationAction DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gddHistory GDDRecord[]

  @@index([nodeId])
  @@index([gatewayId])
  @@index([cropType])
  @@index([cropConfirmed, lastGDDUpdate])
  @@map("fields")
}

// GDD history records
// Daily GDD calculations using AIR temperature from SensorReading.airTemperature
// Formula: GDD = max(0, (Tmax + Tmin)/2 - Tbase)
model GDDRecord {
  id      Int      @id @default(autoincrement())
  fieldId Int
  date    DateTime @db.Date

  // Daily AIR temperature data (from SensorReading.airTemperature aggregated daily)
  avgAirTemp    Float // Daily average air temperature (°C)
  minAirTemp    Float? // Daily minimum air temperature (°C)
  maxAirTemp    Float? // Daily maximum air temperature (°C)
  readingsCount Int // Number of sensor readings used for daily aggregation

  // GDD calculations: dailyGDD = max(0, (maxAirTemp + minAirTemp)/2 - baseTemperature)
  dailyGDD      Float // GDD accumulated on this date
  cumulativeGDD Float // Running total from sowingDate

  // Crop context
  cropType        String? // Crop being grown
  baseTemperature Float // Base temperature (Tbase) used for this calculation
  growthStage     String? // Growth stage at this date

  createdAt DateTime @default(now())

  field Field @relation(fields: [fieldId], references: [id], onDelete: Cascade)

  @@unique([fieldId, date])
  @@index([fieldId])
  @@index([date])
  @@index([fieldId, date])
}

model Alert {
  id           Int      @id @default(autoincrement())
  nodeId       Int
  readingId    Int
  alertType    String
  message      String
  sentAt       DateTime @default(now())
  acknowledged Boolean  @default(false)

  @@index([nodeId, sentAt])
  @@index([acknowledged])
}

// Crop parameters reference data
// Seeded from seed.ts with 20 UP-valid crops
model CropParameters {
  id       Int    @id @default(autoincrement())
  cropName String @unique

  // Temperature parameters
  soilTempMin     Float // Minimum soil temperature (°C)
  soilTempOptimal Float // Optimal soil temperature (°C)
  soilTempMax     Float // Maximum soil temperature (°C)

  // Soil moisture parameters (VWC %)
  vwcMin     Float // Minimum VWC (%)
  vwcOptimal Float // Optimal VWC (%)
  vwcMax     Float // Maximum VWC before waterlogging (%)

  // GDD parameters (uses AIR temperature, not soil)
  baseTemperature Float // Tbase for GDD calculation (°C)
  totalGDD        Float // Total GDD required from sowing to harvest

  // Irrigation parameters
  rootDepthCm Int // Effective root depth (cm)
  mad         Float // Management Allowed Depletion fraction (0-1)

  // Crop coefficient (Kc) for ET calculation - stored as JSON
  // Format: {"ini": 0.4, "mid": 1.15, "end": 0.4}
  kc Json

  // Growth stage thresholds (in GDD, not days)
  initialStageGDD     Float // GDD to reach end of INITIAL stage
  developmentStageGDD Float // GDD to reach end of DEVELOPMENT stage
  midSeasonGDD        Float // GDD to reach end of MID_SEASON stage
  lateSeasonGDD       Float // GDD to reach end of LATE_SEASON stage

  // Regional and seasonal metadata
  validForUP            Boolean  @default(true)
  season                String // RABI | KHARIF | ZAID | PERENNIAL
  soilTexturePreference String[] // Preferred soil textures

  createdAt DateTime @default(now())

  @@map("CropParameters")
}

// Irrigation decision log
// Records irrigation recommendations and actions taken
model IrrigationLog {
  id                   Int       @id @default(autoincrement())
  nodeId               Int
  timestamp            DateTime  @default(now())
  currentVWC           Float // Current soil moisture (%)
  targetVWC            Float // Target soil moisture (%)
  cropType             String?
  growthStage          String?
  shouldIrrigate       Boolean
  urgency              String // NONE | LOW | MODERATE | HIGH | CRITICAL
  reason               String // Human-readable explanation
  estimatedWaterNeeded Float // Irrigation depth (mm)
  actionTaken          Boolean   @default(false)
  actionTimestamp      DateTime?
  actualWaterApplied   Float?

  @@index([nodeId, timestamp])
  @@index([shouldIrrigate])
}
